 <div class = "form-auth text center">
 <h1 class = "text-center mt-4"> Sign up</h1>
     <div class ="container">
     <div class = "row justify-content-center">
     <div class = col-8>

 <%= form_with(scope: :session,  class: "shadow p-3 mb-5 bg-white rounded", local:true) do |f| %>
<div class = "form-group row">
 <%# <%= f.label :email, class: "col-2 col-form-label" %> 
     <div class = "col-8">
 <%= f.text_field :username,class: "form-control shadow rounded",placeholder: "Please enter username", required: "true" %>
     </div>
     </div>
         <div class = "form-group row">
 <%# <%= f.label :email, class: "col-2 col-form-label" %> 
     <div class = "col-8">
 <%= f.email_field :email,class: "form-control shadow rounded",placeholder: "Enter your email id",required: "true" %>
     </div>
     </div>

     <div class = "form-group row">
 <%# <%= f.label :password, class: "col-2 col-form-label" %> 
     <div class = "col-8">
    
 <%= f.password_field :password,class: "form-control shadow rounded",placeholder: "enter your password", required: "true" %>
     </div>
     </div>


     <div class = "form-group row">
 <%# <%= f.label :password, class: "col-2 col-form-label" %> 
     <div class = "col-8">
 <%= f.password_field :password,class: "form-control shadow rounded",placeholder: "Confirm your password",required: "true" %>
     </div>
     </div>


     <div class="form-group1 ">
 <%= f.submit "sign up",class: "btn btn-outline-success" %>
     </div>
<%= render  "devise/shared/links" %>
     </div>

 
     </div>
     </div>
     </div>
 <%end%>


</section>
