<%# <%= render 'layouts/nav/sidebar'%> 

<%= form_with(model: proparty) do |form| %>
  <%= render "layouts/validation", item: @proparty  %>

  <div class ="form-group">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name , class: "form-control" %>
  </div>

  <div class ="form-group">
    <%= form.label :address, style: "display: block" %>
    <%= form.text_field :address,class: "form-control" %>
  </div>

  <div class ="form-group">
    <%= form.label :price, style: "display: block" %>
    <%= form.number_field :price,class: "form-control" %>
  </div>

  <div class ="form-group">
    <%= form.label :rooms, style: "display: block" %>
    <%= form.number_field :rooms ,class: "form-control"%>
  </div>

  <div class ="form-group">
    <%= form.label :bathroom, style: "display: block" %>
    <%= form.number_field :bathroom ,class: "form-control" %>
  </div>

  <div class ="form-group">
    <%= form.label :photo %>
    <%= form.file_field :photo, class: "form-control" %>
   <% form.hidden_field :photo_cache %>
  </div>

  <div class ="form-group">
    <%= form.submit "Save Proparty", class: "btn btn-lg btn-black btn-success" %>
  </div>
<% end %>
